<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<Window size="600,450">
	<Font id = "1" name="sendMsgFont" size="18" bold="false" />  

    <VerticalLayout name="VerticalLayout" enabled="true" width="522" height="455" bkcolor="#FFFFFFFF" inset="10,10,10,0">

    	<Text name="txtMsg" text="消息" padding="0,5,0,5"/>

        
        <RichEdit name="edtLog" bordersize="1" bordercolor="#003E3E3E" readonly="true" height="200" textpadding="5,5,0,0" valign="top"/>

        <HorizontalLayout height="30" padding="0,5,0,20">

        	<label name="txtAddr" text="地址" align="center"/>

        	<Edit name="edtAddr" bordersize="1" bordercolor="#003E3E3E" />

        	<label name="txtPort" text="端口" align="center"/>

        	<Edit name="edtPort" bordersize="1" bordercolor="#003E3E3E" />

        	<Button name="btnConn" text="连接"  bkcolor="#FF008000" textcolor="#00FFFFFF" align="center" padding="10,0,0,0"/>
        </HorizontalLayout>

        <HorizontalLayout height="55">
        	<Edit name="edtSendMsg" font="1"  bordersize="1" bordercolor="#003E3E3E"/>
        	<Button name="btnSend" width="120" text="发送消息"  bkcolor="#FF008000" textcolor="#00FFFFFF" align="center" padding="10,0,0,0"/>
        </HorizontalLayout>

    </VerticalLayout>
</Window>
